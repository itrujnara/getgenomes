{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/itrujnara/getgenomes/master/assets/schema_input.json",
    "title": "itrujnara/getgenomes pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample ID must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "ids_path": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "errorMessage": "ID list must be provided."
            }
        },
        "required": ["id", "ids_path"]
    }
}
